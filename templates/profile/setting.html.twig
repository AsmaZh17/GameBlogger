{% extends 'base.html.twig' %}
{% block body %}
            <section class="youplay-banner banner-top youplay-banner-parallax small">
                <div class="image" data-speed="0.4">
                    <img src="{{ asset('images/dark/game-diablo-iii-1400x656.jpg') }}" alt="" class="jarallax-img">
                </div>
                <div class="youplay-user-navigation">
                    <div class="container">
                        <ul>
                            <li><a href="{{ path('app_profile') }}">Profile</a></li>
                            <li class="active"><a href="{{ path('app_setting') }}">Settings</a></li>
                        </ul>
                    </div>
                </div>
                
                <div class="info">
                    <div>
                        <div class="container youplay-user">
                            <a class="angled-img image-popup">
                                <div class="img">
                                    <img src="{{ asset('images/dark/avatar.png') }}" alt="">
                                </div>
                                <i class="fa fa-search-plus icon"></i>
                            </a>
                            <div class="user-data">
                                <h2>{{ app.user.nom }} {{ app.user.prenom }}</h2>
                                <div class="location"> {{ app.user.nom }} {{ app.user.prenom }}</div>
                                <div class="activity">
                                    <div>
                                        <div class="num">{{favorite}}</div>
                                        <div class="title">Favorites</div>
                                    </div>
                                    <div>
                                        <div class="num">{{game}}</div>
                                        <div class="title">Games</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <div class="container youplay-content">
                <div class="row">
                    <div class="col-md-12">
                        <h3>Change Password:</h3>
                        {{ form_start(passwordForm, {'attr': {'id': 'password-form'}}) }}
                        <div class="form-horizontal mt-30 mb-40">
                            <div class="form-group">
                                <label class="control-label col-sm-2" for="cur_password">Current Password:</label>
                                <div class="col-sm-10">
                                    <div class="youplay-input">
                                        <input type="password" id="cur_password" placeholder="Current Password">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2" for="new_password">New Password:</label>
                                <div class="col-sm-10">
                                    <div class="youplay-input">
                                        {{ form_widget(passwordForm) }}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                    <div class="col-sm-offset-2 col-sm-10">
                                        <button class="btn btn-default">Change Password</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                
                {{ form_end(passwordForm) }}
                {{ form_start(form) }}
                <h3>Other Information:</h3>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-horizontal mt-30 mb-40">
                            <div class="form-group">
                                <label class="control-label col-sm-4" for="new_first_name">New First Name:</label>
                                <div class="col-sm-8">
                                    <div class="youplay-input">
                                        {{ form_widget(form.nom, {'attr': {'class': 'form-control' , 'placeholder': 'New First Name'}}) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-horizontal mt-30 mb-40">
                            <div class="form-group">
                                <label class="control-label col-sm-4" for="new_last_name">New Last Name:</label>
                                <div class="col-sm-8">
                                    <div class="youplay-input">
                                        {{ form_widget(form.prenom, {'attr': {'class': 'form-control' , 'placeholder': 'New Last Name'}}) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-horizontal mt-30 mb-40">
                            <div class="form-group">
                                <label class="control-label col-sm-2">Current Email:</label>
                                <div class="col-sm-10">
                                    {{ app.user.email|masked_email }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2" for="new_email">New Email:</label>
                                <div class="col-sm-10">
                                    <div class="youplay-input">
                                        {{ form_widget(form.email, {'attr': {'class': 'form-control' , 'placeholder': 'New Email'}}) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button class="btn btn-default pull-right">{{ button_label|default('Change Information') }}</button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
          </div>                  
        
{% endblock %}