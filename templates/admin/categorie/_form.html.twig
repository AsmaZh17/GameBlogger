{{ form_start(form) }}
<div class="container youplay-content">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-12">
                <p>Nom:</p>
                <div class="youplay-input">
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
                </div>
            </div>
        </div>
        <div class="row">
            <p>Description:</p>
            <div class="youplay-textarea">
                {{ form_widget(form.description, {'attr': {'rows': '5', 'class': 'form-control auto-size', 'placeholder': 'Description...'}}) }}
            </div>
        </div>
    </div>
</div>
    <button class="btn btn-default btn-lg pull-right">{{ button_label|default('Submit') }}</button>
{{ form_end(form) }}