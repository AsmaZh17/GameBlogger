{{ form_start(form) }}
<div class="container youplay-content">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-6">
                <p>Nom:</p>
                <div class="youplay-input">
                    {{ form_widget(form.titre, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
                </div>
            </div>
            <div class="col-md-6">
                <p>Image:</p>
                <div class="youplay-input">
                    {{ form_widget(form.image, {'attr': {'class': 'form-control', 'placeholder': 'Image'}}) }}
                </div>
            </div>
        </div>
        <div class="row">
            <p>Description:</p>
            <div class="youplay-textarea">
                {{ form_widget(form.contenu, {'attr': {'rows': '5', 'class': 'form-control auto-size', 'placeholder': 'Description...'}}) }}
            </div>
        </div>      
        <div class="row">
            <div class="col-md-6">
                <p>Author:</p>
                <div class="youplay-select">
                    {{ form_widget(form.author, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="col-md-6">
                <p>Categorie:</p>
                <div class="youplay-select">
                    {{ form_widget(form.categorie, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>
        <p>Tags:</p>
        {% for choice in form.tags %}
            <div class="youplay-checkbox" style="display: inline-block; margin-right: 10px;">
                {{ form_widget(choice) }}
                {{ form_label(choice) }}
            </div>
        {% endfor %}
    </div>
</div>
    <button class="btn btn-default btn-lg pull-right">{{ button_label|default('Submit') }}</button>
{{ form_end(form) }}
