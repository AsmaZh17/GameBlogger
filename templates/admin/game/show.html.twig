{% extends 'baseAdmin.html.twig' %}

{% block title %}Game{% endblock %}

{% block body %}
<section class="youplay-banner banner-top youplay-banner-parallax small">
    <div class="image" data-speed="0.4">
        <img src="{{ asset('images/dark/banner-blog-bg.jpg') }}" alt="" class="jarallax-img">
    </div>
    <div class="info">
        <div>
            <div class="container">
                <h1 class="h1">Game</h1>
            </div>
        </div>
    </div>
</section>
<div class="container youplay-content">
    <table class="table table-bordered table-hover">
                    <tbody>
                        <tr>
                <th>Id</th>
                <td>{{ game.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ game.nom }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ game.image }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ game.prix }}</td>
            </tr>
            <tr>
                <th>WidthStar</th>
                <td>{{ game.widthStar }}</td>
            </tr>
            <tr>
                <th>Solde</th>
                <td>{{ game.solde }}</td>
            </tr>
            <tr>
                <th>End</th>
                <td>{{ game.end ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ game.description }}</td>
            </tr>
                    </tbody>
                </table>

    </div>

    <a href="{{ path('app_games_index') }}" class="btn btn-lg pull-left">back to list</a>

    <a href="{{ path('app_games_edit', {'id': game.id}) }}" class="btn btn-lg pull-right">edit</a>

    {{ include('admin/game/_delete_form.html.twig') }}
{% endblock %}
